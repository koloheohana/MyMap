<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.koloheohana.mymap.MainTork">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nowGroupText"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="トーク"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <Button
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:layout_weight="2"
                android:onClick="myMap"
                android:text="マップ"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="#222222"
                android:padding="0dp"
                android:text="○"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"

                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="#222222"
                android:padding="0dp"
                android:text="×"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="30dp"

                android:layout_height="30dp"
                android:layout_marginBottom="10dp"

                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"

                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="#222222"
                android:padding="0dp"
                android:text="△"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_tork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/tork_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="5dp">

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        >

        <EditText
            android:id="@+id/tork_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tork_box"
            android:maxLines="3" />

        <Button
            android:id="@+id/tork_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:onClick="edit_tork"
            android:text="送信" />
    </LinearLayout>

</LinearLayout>